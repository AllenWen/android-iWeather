<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appbar_overlay_style" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="fam_label_style">
        <item name="android:background">@drawable/shape_fab_label</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="dialog_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_red</item>
    </style>

</resources>
